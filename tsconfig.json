{
  "compilerOptions": {
    "target": "ES2019",
    "module": "commonjs",
    "lib": ["ESNext"],
    "rootDir": "./src",
    "outDir": "dist",
    "strict": true,
    "typeRoots": ["./types", "./node_modules/@types"],
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "include": ["src/**/*", "types/**/*"]
}